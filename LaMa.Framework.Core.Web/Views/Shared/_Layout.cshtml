@using LaMa.Framework.Core.Web.ExtensionMethods.HtmlExtensions
 
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Html.LoadDefaultStyleSheets()
    @Html.LoadDefaultJavascriptFiles()
    @RenderSection("Styles")
</head>
<body>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - LaMa IT</p>
        </footer>
    </div>

    @RenderSection("Scripts")
</body>
</html>